<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:elevation="5dp"
    android:orientation="vertical"
    cardview:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#CCC">

            <ImageView
                android:id="@+id/ivSongTilePic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                tools:src="@drawable/ic_headphones"
                android:scaleType="center"
                android:transitionName="@string/transition_songPic"/>

        </FrameLayout>

        <TextView
            android:id="@+id/tvSongName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            tools:text="Song Name"
            android:textColor="@android:color/black"
            android:transitionName="@string/transition_songName"/>

        <TextView
            android:id="@+id/tvSongSubName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@android:color/black"
            tools:text="SongSub Name" />

        <TextView
            android:id="@+id/tvTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            tools:text="Song Tag"
            android:textColor="@android:color/black"
            android:visibility="gone"/>

    </LinearLayout>

</android.support.v7.widget.CardView>